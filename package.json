{
  "name": "falcor-koa-router",
  "version": "0.1.3",
  "author": "yiminghe@gmail.com",
  "description": "falcor router middleware for koa",
  "keywords": [
    "falcor",
    "router",
    "koa"
  ],
  "main": "./lib",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "lint": "eslint src",
    "test": "mocha --compilers js:babel-register",
    "test:watch": "mocha --compilers js:babel-register --watch",
    "prepare": "npm run lint && npm run build && npm run test"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/yiminghe/falcor-koa-router.git"
  },
  "pre-commit": [
    "lint"
  ],
  "devDependencies": {
    "babel-cli": "^6.0.0",
    "babel-eslint": "~4.1.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "eslint": "~1.7.3",
    "eslint-config-airbnb": "~0.1.0",
    "falcor": "^0.1.17",
    "falcor-http-datasource": "^0.1.3",
    "koa": "^2.0.0",
    "koa-mount": "^2.0.0",
    "mocha": "^2.5.3",
    "precommit-hook-eslint": "~3.0.0",
    "supertest": "^1.2.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports",
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb/base"
  },
  "peerDependencies": {
    "koa": "~2.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.9.1",
    "babel-runtime": "^6.9.2",
    "co-body": "^4.2.0",
    "falcor-router": "^0.4.0"
  }
}
